# ============================================================
# PRODUCTION MODE - Full Features (Normal Cost)
# Estimated cost: $40-60/month (5K users/day)
# ============================================================

# ==================== MASTER SWITCH ====================
# Full translation service enabled
TRANSLATION_MODE=full

# ==================== COST CONTROL ====================
# All features enabled
ENABLE_AMAZON_TRANSLATE=true
ENABLE_CLOUDWATCH_METRICS=true
ENABLE_DETAILED_LOGGING=true
ENABLE_CACHE=true

# ==================== LIMITS ====================
# Production limits (still has safety limits)
MAX_TRANSLATIONS_PER_DAY=10000
MAX_DAILY_COST_USD=10.00

# ==================== TESTING RESTRICTIONS ====================
# Allow all users in production
ALLOWED_TEST_USERS=

# Enable all 6 languages
ALLOWED_LANGUAGES=en,hi,mr,ta,te,bn

# ==================== AWS Configuration ====================
AWS_REGION=ap-south-1
PRODUCTS_TABLE=vyaparai-products-catalog-prod
TRANSLATION_CACHE_TABLE=vyaparai-translation-cache-prod
CACHE_TTL_DAYS=30

# ==================== API Security ====================
# IMPORTANT: Replace with your actual API keys
VALID_API_KEYS=your-production-key-1,your-production-key-2,your-production-key-3
ALLOWED_ORIGINS=https://www.vyapaarai.com,https://vyapaarai.com

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=60

# ==================== Other Settings ====================
MAX_BATCH_SIZE=100
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
