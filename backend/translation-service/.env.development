# ============================================================
# DEVELOPMENT MODE - Cache Only (Very Low Cost)
# Estimated cost: $1-2/day (~$30-60/month)
# ============================================================

# ==================== MASTER SWITCH ====================
# Use real translations but only if cached (no new API calls)
TRANSLATION_MODE=cache_only

# ==================== COST CONTROL ====================
# Only use cache, no new translations
ENABLE_AMAZON_TRANSLATE=false
ENABLE_CLOUDWATCH_METRICS=false
ENABLE_DETAILED_LOGGING=true
ENABLE_CACHE=true

# ==================== LIMITS ====================
# Higher limits for development
MAX_TRANSLATIONS_PER_DAY=500
MAX_DAILY_COST_USD=2.00

# ==================== TESTING RESTRICTIONS ====================
# Allow all test users
ALLOWED_TEST_USERS=

# Enable 3 main languages
ALLOWED_LANGUAGES=en,hi,mr

# ==================== AWS Configuration ====================
AWS_REGION=ap-south-1
PRODUCTS_TABLE=vyaparai-products-catalog-prod
TRANSLATION_CACHE_TABLE=vyaparai-translation-cache-prod
CACHE_TTL_DAYS=30

# ==================== API Security ====================
VALID_API_KEYS=dev-key-67890
ALLOWED_ORIGINS=https://www.vyapaarai.com,https://vyapaarai.com,http://localhost:5173

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=30

# ==================== Other Settings ====================
MAX_BATCH_SIZE=50
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50
