# VyapaarAI Translation Service - Environment Variables
# Copy this file to .env and update with your values

# ==================== AWS Configuration ====================
AWS_REGION=ap-south-1

# ==================== DynamoDB Tables ====================
PRODUCTS_TABLE=vyaparai-products-catalog-prod
TRANSLATION_CACHE_TABLE=vyaparai-translation-cache-prod

# ==================== Cache Configuration ====================
# Translation cache TTL in days
CACHE_TTL_DAYS=30

# ==================== API Security ====================
# Comma-separated list of valid API keys
# Generate using: openssl rand -hex 32
# Leave empty to disable authentication (NOT recommended for production)
VALID_API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# ==================== CORS Configuration ====================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://www.vyapaarai.com,https://vyapaarai.com

# ==================== Rate Limiting ====================
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ==================== Circuit Breaker ====================
# Number of failures before circuit opens
CIRCUIT_BREAKER_FAIL_MAX=5

# Timeout duration in seconds before attempting to close circuit
CIRCUIT_BREAKER_TIMEOUT=60

# ==================== Retry Configuration ====================
# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Minimum wait time between retries (seconds)
RETRY_WAIT_MIN=1

# Maximum wait time between retries (seconds)
RETRY_WAIT_MAX=10

# ==================== Batch Processing ====================
# Maximum number of products that can be translated in a single batch request
MAX_BATCH_SIZE=100

# ==================== Pagination ====================
# Default page size for list endpoints
DEFAULT_PAGE_SIZE=20

# Maximum page size allowed
MAX_PAGE_SIZE=100

# ==================== Monitoring & Alerts ====================
# SNS topic ARN for CloudWatch alarms (optional)
ALARM_SNS_TOPIC_ARN=arn:aws:sns:ap-south-1:491065739648:vyaparai-translation-alerts

# Email for alarm notifications
ALERT_EMAIL=devprakash@example.com

# ==================== Feature Flags ====================
# Enable/disable structured JSON logging (true/false)
ENABLE_JSON_LOGGING=true

# Enable/disable CloudWatch embedded metrics (true/false)
ENABLE_CLOUDWATCH_METRICS=true

# Enable/disable request tracing (true/false)
ENABLE_TRACING=true

# ==================== Performance Tuning ====================
# Maximum number of concurrent connections to AWS services
MAX_POOL_CONNECTIONS=50

# Connection timeout in seconds
CONNECT_TIMEOUT=5

# Read timeout in seconds
READ_TIMEOUT=60
